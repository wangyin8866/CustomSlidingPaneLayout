<?xml version="1.0" encoding="utf-8"?>
<com.wy.slidingpanelayoutdemo.CustomSliding xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_sliding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wy.slidingpanelayoutdemo.MainActivity">

    <LinearLayout
        android:id="@+id/id_ll_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="menu"
            android:textSize="40sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</com.wy.slidingpanelayoutdemo.CustomSliding>
